<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" style="-fx-background-color: #fad907;" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetworkgui.EventsController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="127.0" style="-fx-background-color: #1D232A #1D232A;">
            <children>
                <Button fx:id="newEventButton" onAction="#newEventClicked" layoutX="14.0" layoutY="177.0"
                        mnemonicParsing="false" prefHeight="46.0"
                        prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 500;"
                        text="New Event"/>
            </children>
        </AnchorPane>
        <Button fx:id="homeButton" layoutX="14.0" layoutY="18.0" mnemonicParsing="false" onAction="#homeClicked"
                prefHeight="46.0" prefWidth="74.0" style="-fx-background-color: white; -fx-background-radius: 500;">
            <graphic>
                <ImageView fx:id="homeImage" fitHeight="37.0" fitWidth="42.0">
                </ImageView>
            </graphic>
        </Button>
        <TableView fx:id="eventTable" layoutX="173.0" layoutY="100.0" prefHeight="200.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="id" minWidth="0.0" prefWidth="0.0" text="id"/>
                <TableColumn fx:id="name" prefWidth="111.0" text="Name"/>
                <TableColumn fx:id="description" minWidth="9.0" prefWidth="175.0" text="Description"/>
                <TableColumn fx:id="data" prefWidth="113.0" text="Date"/>
            </columns>
        </TableView>
        <Label fx:id="labelTable" layoutX="345.0" layoutY="56.0" text="My Events">
            <font>
                <Font name="System Font" size="13.0"/>
            </font>
        </Label>
        <Button fx:id="unsubscribeButton" layoutX="250.0" layoutY="318.0" mnemonicParsing="false"
                onAction="#unsubscribeClicked" prefHeight="30.0" prefWidth="100.0"
                style="-fx-background-radius: 500; -fx-background-color: #cf142b #cf142b;" text="Unsubscribe"/>
        <Button fx:id="findEventsButton" onAction="#findEventsClicked" layoutX="14.0" layoutY="100.0"
                mnemonicParsing="false" prefHeight="46.0"
                prefWidth="100.0" style="-fx-background-radius: 500; -fx-background-color: white;" text="Find Events"/>
        <Button fx:id="attendButton" onAction="#attendClicked" layoutX="402.0" layoutY="318.0" mnemonicParsing="false"
                prefHeight="30.0"
                prefWidth="100.0" style="-fx-background-radius: 500; -fx-background-color: white;" text="Attend"/>
    </children>
</AnchorPane>
