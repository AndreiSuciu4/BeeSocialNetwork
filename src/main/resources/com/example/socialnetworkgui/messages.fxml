<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetworkgui.MessageController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="87.0" style="-fx-background-color: #1D232A;" />
      <AnchorPane layoutX="87.0" prefHeight="400.0" prefWidth="229.0" style="-fx-background-color: #242A31;">
         <children>
            <ScrollPane prefHeight="400.0" prefWidth="230.0" style="-fx-background-color: #242A31;">
              <content>
                <AnchorPane fx:id="anchorPaneFriends" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="218.0" style="-fx-background-color: #242A31;" />
              </content>
            </ScrollPane>
         </children>
      </AnchorPane>
      <Label layoutX="464.0" layoutY="136.0" text="Label" textFill="#eae3e3" />
      <TextField fx:id="messageField" layoutX="321.0" layoutY="368.0" prefHeight="31.0" prefWidth="368.0" promptText="Type your message..." />
      <ScrollPane fx:id="scrollPaneMessage" layoutX="317.0" layoutY="32.0" prefHeight="335.0" prefWidth="435.0">
        <content>
          <AnchorPane fx:id="anchorPaneMessage" minHeight="0.0" minWidth="0.0" prefHeight="334.0" prefWidth="422.0" />
        </content>
      </ScrollPane>
      <Button fx:id="sendButton" layoutX="689.0" layoutY="373.0" mnemonicParsing="false" onAction="#sendClicked" text="Send" />
      <Button fx:id="deleteButton" layoutX="505.0" layoutY="1.0" mnemonicParsing="false" text="Delete message" />
      <Button fx:id="replyButton" layoutX="616.0" layoutY="1.0" mnemonicParsing="false" text="Reply" />
      <Button layoutX="680.0" layoutY="2.0" mnemonicParsing="false" onAction="#replyAllClicked" text="Reply all" />
   </children>
</AnchorPane>
